# DESCRIPTION: This makefile includes the shared makefile and contains
#   bench level make targets.
#


# *********************************************************************************************
# UVMF library directory:
# This variable points to the UVMF release where uvmf_base_pkg directory resides.
# This variable points to release code that is not user modified.
# This variable allows for UVMF release directories to reside independent of project related verification_ip and project_benches directories.
# This code below looks "upward" for directory starting with UVMF_* and returns first match for use with the release examples.
UVMF_HOME ?= $(firstword $(wildcard $(addsuffix /UVMF_*,. .. ../.. ../../.. ../../../.. ../../../../..)))
#
# Project(s) specific verification_ip library:
# Directory where reusable verification packages for interfaces, environments, utilities, etc. reside.
# This variable allows for verification_ip to reside independent of project bench and UVMF release directories.
# For examples deployed with UVMF this will be $(UVMF_HOME)/<example_group>/verification_ip
export UVMF_VIP_LIBRARY_HOME ?= ../../../verification_ip
#
# Project specific bench:
# Directory where bench specific code is located.
# This variable allows for project_benches to reside independent of verification_ip and UVMF release directories.
# For examples deployed with UVMF this will be $(UVMF_HOME)/<example_group>/project_benches/<example_bench>
export UVMF_PROJECT_DIR ?= ../../../project_benches/axi4_2x2_fabric
#
# *********************************************************************************************
# QVIP specific code generated by QVIP Configurator:
# These variables identify where code generated by the QVIP configurator is located.
# The default values for these variables are to indicate to the user that the value needs to be set.
# This variable should point down to and including the uvmf directory in the QVIP confiurator generated code.
# export AXI4_2X2_FABRIC_QVIP_DIR_NAME ?= the_environment_variable_named_AXI4_2X2_FABRIC_QVIP_DIR_NAME_needs_to_point_to_the_QVIP_configurator_generated_code_for_this_sub_environment
export AXI4_2X2_FABRIC_QVIP_DIR_NAME ?= ../../../verification_ip/environment_packages/axi4_2x2_fabric_qvip_env_pkg/uvmf
#
# *********************************************************************************************
# Set test case specific Variables
TEST_NAME            = test_top
TEST_SEED            = random
TEST_VERBOSITY       = UVM_HIGH
UVM_CLI_ARGS         = 

# Usage of Veloce, etc. to be input by the user (subject to defaults)
USE_VELOCE          ?= 0
USE_LEGACY_TBX_FLOW ?= 0

# Usage of Veloce and Questa profilers
USE_VELOCE_PROFILER ?= 0
USE_QUESTA_PROFILER ?= 0

# Set project Variables
TEST_PLAN_NAME       = axi4_2x2_fabric_TestPlan
REPORTING_DO_FILE    = axi4_2x2_fabric_reports_script

# Include makefile that includes targets for UVM_VIP_Library packages
include $(UVMF_HOME)/scripts/Makefile

# Include all requisite interface package targets for this bench

# Include all requisite environment package targets for this bench
include $(UVMF_VIP_LIBRARY_HOME)/environment_packages/axi4_2x2_fabric_env_pkg/Makefile

# Add to default compile/load/run arguments
VCOM_ARGS             += 

VLOG_ARGS             +=  -timescale 1ps/1ps
VELANALYZE_ARGS       +=
VELANALYZE_HVL_ARGS   +=

BATCH_VOPT_ARGS       +=
DEBUG_VOPT_ARGS       +=

COMMON_VSIM_ARGS      +=  -mvchome $(QUESTA_MVC_HOME)  

BATCH_VSIM_ARGS       += #-uvmcontrol=none
DEBUG_VSIM_ARGS       += 

# Do commands
                      DEBUG_DO_COMMANDS =     -do " \
                      set NoQuitOnFinish 1; \
                      onbreak {resume}; \
                      run 0; \
                      do wave.do; \
                      radix hex showbase;  \
                      "
                      # run -all; \

# Project bench package source
axi4_2x2_fabric_PARAMETERS_PKG =\
$(UVMF_PROJECT_DIR)/tb/parameters/axi4_2x2_fabric_parameters_pkg.sv

axi4_2x2_fabric_SEQUENCES_PKG =\
$(UVMF_PROJECT_DIR)/tb/sequences/axi4_2x2_fabric_sequences_pkg.sv

axi4_2x2_fabric_TEST_PKG =\
$(UVMF_PROJECT_DIR)/tb/tests/axi4_2x2_fabric_test_pkg.sv

axi4_2x2_fabric_DUT =\
$(UVMF_PROJECT_DIR)/rtl/verilog/axi4_interconnect_NxN.sv

 


# Project bench package targets
COMP_axi4_2x2_fabric_PARAMETERS_PKG_TGT_0 = q_comp_axi4_2x2_fabric_parameters_pkg
COMP_axi4_2x2_fabric_PARAMETERS_PKG_TGT_1 = v_comp_axi4_2x2_fabric_parameters_pkg
COMP_axi4_2x2_fabric_PARAMETERS_PKG_TGT = $(COMP_axi4_2x2_fabric_PARAMETERS_PKG_TGT_$(USE_VELOCE))

comp_axi4_2x2_fabric_parameters_pkg: $(COMP_axi4_2x2_fabric_PARAMETERS_PKG_TGT)

q_comp_axi4_2x2_fabric_parameters_pkg:
	        $(HVL_COMP_CMD) +incdir+$(UVMF_PROJECT_DIR)/tb/parameters $(axi4_2x2_fabric_PARAMETERS_PKG)

v_comp_axi4_2x2_fabric_parameters_pkg: q_comp_axi4_2x2_fabric_parameters_pkg
	$(HDL_COMP_CMD) +incdir+$(UVMF_PROJECT_DIR)/tb/parameters $(axi4_2x2_fabric_PARAMETERS_PKG)

comp_axi4_2x2_fabric_sequence_pkg:
	$(HVL_COMP_CMD) +incdir+$(UVMF_PROJECT_DIR)/tb/sequences $(axi4_2x2_fabric_SEQUENCES_PKG)

comp_axi4_2x2_fabric_test_pkg:
	$(HVL_COMP_CMD) +incdir+$(UVMF_PROJECT_DIR)/tb/tests $(axi4_2x2_fabric_TEST_PKG)

# UVMF_CHANGE_ME : Add make target to compile your dut here
comp_axi4_2x2_fabric_dut:
	echo "Compile your DUT here"
#	$(HDL_COMP_CMD) $(axi4_2x2_fabric_DUT)
	$(HDL_COMP_CMD) $(axi4_2x2_fabric_DUT)

comp_qvip:
	$(HVL_COMP_CMD) +incdir+$(QUESTA_MVC_HOME)/questa_mvc_src/sv/ -f $(AXI4_2X2_FABRIC_QVIP_DIR_NAME)/axi4_2x2_fabric_qvip_filelist.f
	$(HVL_COMP_CMD) +incdir+$(AXI4_2X2_FABRIC_QVIP_DIR_NAME) $(AXI4_2X2_FABRIC_QVIP_DIR_NAME)/hdl_axi4_2x2_fabric_qvip.sv

build: comp_uvm_pkg comp_fli_pkg comp_uvmf_base_pkg  comp_qvip    comp_axi4_2x2_fabric_env_pkg comp_axi4_2x2_fabric_parameters_pkg comp_axi4_2x2_fabric_sequence_pkg comp_axi4_2x2_fabric_test_pkg comp_axi4_2x2_fabric_dut comp_test_bench

